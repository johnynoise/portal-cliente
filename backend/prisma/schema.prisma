generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String
  empresa  String
  password String
  telefone String? 
  role     String  @default("cliente")
}

model Produto {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  nome             String
  descricao        String
  linkDocumentacao String
  criadoEm         DateTime @default(now())
  imagemUrl       String?
}

model Faq {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  pergunta      String
  resposta      String
  categoria     String
  ordem         Int      @default(0)
  ativo         Boolean  @default(true)
  visualizacoes Int      @default(0)
  util          Int      @default(0)
  naoUtil       Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("faqs")
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String   // success | warning | info | error
  message   String
  createdAt DateTime @default(now())
  lida      Boolean  @default(false)
}
