generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String
  empresa  String
  password String
  telefone String? 
  role     String  @default("cliente")
  status   String  @default("active")
}

model Produto {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  nome             String
  descricao        String
  categoria        String?
  fabricante       String?
  linkDocumentacao String
  linkCertificacao String?
  imagemUrl        String?
  galeria          String[]  @default([])
  status           String    @default("ativo")
  versao           String    @default("1.0.0")
  totalClientes    Int       @default(0)
  
  // Especificações técnicas
  especificacoes   Json?     // Objeto com especificações técnicas flexíveis
  
  // Documentos e Downloads
  documentos       Json[]    @default([]) // Array de {tipo, nome, url, tamanho, dataUpload}
  
  // Certificações e Portarias
  certificacoes    Json[]    @default([]) // Array de {tipo, numero, orgao, dataValidade, url}
  
  // Metadados
  visualizacoes    Int       @default(0)
  downloads        Int       @default(0)
  
  criadoEm         DateTime  @default(now())
  atualizadoEm     DateTime? @updatedAt
}

model Faq {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  pergunta      String
  resposta      String
  categoria     String
  ordem         Int      @default(0)
  ativo         Boolean  @default(true)
  visualizacoes Int      @default(0)
  util          Int      @default(0)
  naoUtil       Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("faqs")
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String   // success | warning | info | error
  message   String
  createdAt DateTime @default(now())
  lida      Boolean  @default(false)
}
